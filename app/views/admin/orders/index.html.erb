<h1>Замовлення</h1>

<% if @orders.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Товари</th>
        <th>Сума</th>
        <th>Дата-час</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user&.email || "Guest" %></td>
          <td>
            <ul>
              <% order.order_items.each do |item| %>
                <li><%= "#{item.product.name} (x#{item.quantity})" %></li>
              <% end %>
            </ul>
          </td>
          <td><%= number_to_currency(order.order_items.sum { |item| item.price * item.quantity }) %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No orders available.</p>
<% end %>

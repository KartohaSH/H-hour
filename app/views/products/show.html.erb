
<div>
    <div class="container">
        <% if @product.image.attached? %>
            <%= image_tag @product.image, class: "img-fluid" %>
        <% else %>
            <p>No Image Available</p>
        <% end %>

        <h1><%= @product.name %></h1>
        <h5><%= number_to_currency(@product.price) %></h5>
        <%= link_to "Назад", root_path, class: "btn btn-secondary" %>
        <button type="button" class="btn btn-primary">Додати в корзину</button>
        <p><%= @product.description %></p>
    </div>
    <%= form_with url: add_item_cart_path(product_id: @product.id), method: :post do %>
    <div>
        <%= number_field_tag :quantity, 1, min: 1, class: "form-control" %>
        <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
    </div>
    <% end %>

    

</div>

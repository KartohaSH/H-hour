<h1>Зареєструватись</h1>

<%= form_with url: sign_up_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", name: "user[email]" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", name: "user[password]" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm Password" %>
    <%= form.password_field :password_confirmation, class: "form-control", name: "user[password_confirmation]" %>
  </div>
  <%= form.submit "Sign Up", class: "btn btn-primary" %>
<% end %>
